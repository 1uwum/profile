# If set to yes it will cause plugins that support this feature to read the
# version files used by other version managers
# (e.g. .ruby-version in the case of Rubyâ€™s rbenv).
legacy_version_file=yes

# If set to yes it will cause the asdf update command to upgrade to the latest
# release candidate release instead of the latest semantic version.
use_release_candidates=no

# If set to yes it will cause asdf install always keep the source code or binary
# it downloads.
always_keep_download=no
